# ── Nereo AR — Environment Variables ───────────────────
# Copy to .env and fill in production values:
#   cp .env.example .env

# ── Database (Postgres 16) ─────────────────────────────
POSTGRES_DB=nereo
POSTGRES_USER=nereo
POSTGRES_PASSWORD=nereo_secret
DB_PORT=5433

# ── Cache (Redis 7) ───────────────────────────────────
REDIS_PORT=6380

# ── Backend API (Go) ──────────────────────────────────
API_PORT=8080
GIN_MODE=debug
JWT_SECRET=change-me-in-production-use-a-64-char-random-string
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# ── Mercado Pago ──────────────────────────────────────
MP_ACCESS_TOKEN=
MP_WEBHOOK_SECRET=

# ── WhatsApp (Phase 3) ───────────────────────────────
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_API_TOKEN=

# ── ML Service (FastAPI) ─────────────────────────────
ML_PORT=8081

# ── Frontend (Next.js) ───────────────────────────────
FRONT_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_MP_PUBLIC_KEY=
NEXT_PUBLIC_GOOGLE_MAPS_KEY=
NEXT_PUBLIC_WA_PHONE=

# ── Internal Service URLs (Docker network) ───────────
# These are used inside containers (service-to-service):
#   API_URL=http://nereo-api:8080
#   ML_SERVICE_URL=http://nereo-ml:8081
#   DATABASE_URL=postgres://nereo:nereo_secret@nereo-db:5432/nereo?sslmode=disable
#   REDIS_URL=redis://nereo-cache:6379/0
